<div class="min-h-screen flex items-center justify-center bg-gray-100 py-12 px-4 sm:px-6 lg:px-8">
  <div class="w-full max-w-md md:max-w-lg bg-white p-8 rounded shadow-md">
    <h1 class="text-2xl font-bold text-gray-800 mb-6 text-center">管理者ログイン</h1>

    <%= form_with(url: admin_login_path, local: true, class: "space-y-6") do |f| %>
      <div>
        <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
        <%= f.email_field :email, required: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <div>
        <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password, required: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <div>
        <%= f.submit "ログイン", class: "w-full py-2 px-4 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded shadow-sm" %>
      </div>
    <% end %>

    <% if flash[:alert] %>
      <div class="mt-4 bg-red-100 text-red-700 p-3 rounded text-sm">
        <%= flash[:alert] %>
      </div>
    <% end %>
  </div>
</div>
