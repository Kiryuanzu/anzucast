<div class="max-w-4xl mx-auto py-8 px-4">
  <h1 class="text-2xl font-bold mb-6">エピソード一覧</h1>

  <% @episodes.each do |episode| %>
    <div class="mb-6 border-b pb-4">
      <h2 class="text-lg font-semibold">
        <%= link_to episode.title, episode_path(episode), class: "text-blue-600 hover:underline" %>
      </h2>
      <p class="text-sm text-gray-500">公開日: <%= episode.published_at.strftime("%Y-%m-%d") %></p>
      <p class="mt-1 text-gray-800"><%= truncate(episode.description, length: 100) %></p>
    </div>
  <% end %>

  <%= paginate @episodes %>
</div>
